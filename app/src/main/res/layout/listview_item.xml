<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/raw_bg"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingRight="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fla"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_margin="4dp"
                android:src="@drawable/temp_img" />

            <LinearLayout
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/fla"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:maxLength="17"
                        android:text="To:"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#30518b"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/amountt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="0.00"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#4c3edf"
                        android:textStyle="bold"
                        android:typeface="sans" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#12bcf7"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="Type"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#00bcd4"
                        android:textSize="12sp"
                        android:typeface="sans" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/fd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bal:"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#12bcf7"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/fd"
                        android:text="0.00"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#12bcf7"
                        android:textSize="12sp"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:text="0.00"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#12bcf7"
                        android:textSize="12sp"
                        android:typeface="sans" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/uptime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#0c0c0c"
                        android:textSize="12sp"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:text="Status"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#9be5b0"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:typeface="sans" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/trns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="trns"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#6b87ef"
                    android:textSize="12sp"
                    android:typeface="sans" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
