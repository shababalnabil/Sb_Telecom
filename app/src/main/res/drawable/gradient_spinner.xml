<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:aapt="http://schemas.android.com/aapt" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:background="@android:color/transparent" />
                    <stroke android:width="0dp" android:color="#cabbbbbb" />
                    <padding android:bottom="3dp" android:left="0dp" android:right="0dp" android:top="0dp" />
                </shape>
            </item>
            <item>
                <bitmap android:gravity="right|center_vertical|center_horizontal|center" android:src="@drawable/ic_arrow_down" />
            </item>
            <item android:bottom="1dp">
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="#cabbbbbb" />
                    <solid android:background="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
